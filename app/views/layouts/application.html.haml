!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title ProductiveCoffee
    %script{ type: 'text/javascript', src: 'https://maps.googleapis.com/maps/api/js?libraries=places' }
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body
    %nav
      - if user_signed_in?
        %li= link_to('Logout', destroy_user_session_path, :method => :delete)        
      - else
        %li= link_to('Login', new_user_session_path)
      - if user_signed_in?
        %li= link_to('Edit registration', edit_user_registration_path)
     
      - else
        %li= link_to('Register', new_user_registration_path)
      %h2.logo= link_to 'Productive Coffee', root_path
      = form_tag('/search', method: :get) do
        = text_field_tag :q, nil, placeholder: 'Search establishments'
    = yield